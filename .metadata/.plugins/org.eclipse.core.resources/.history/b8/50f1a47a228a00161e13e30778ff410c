package Juego;

import java.awt.Canvas;
import java.awt.Dimension;

import javax.swing.JFrame;

public class Juego extends Canvas {

	// añade una id para futuros cambios (se puede hacer al pulsar sobre la
	// clase publica Juego)
	private static final long serialVersionUID = 1L;

	// contantes para decir el alto y ancho de nuestra ventana
	private static final int ANCHO = 800;
	private static final int ALTO = 600;

	// nombre para la ventana
	private static final String NOMBRE = "Juego";

	// para añadir la ventana y luego se importa el Jframe
	private static JFrame ventana;

	private Juego() {

		// tamaño que tendra nuestra ventana
		setPreferredSize(new Dimension(ANCHO, ALTO));

		// iniciar objeto ventana
		ventana = new JFrame(NOMBRE);
	}
}
